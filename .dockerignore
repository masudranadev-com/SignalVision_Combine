# Environment files (will be mounted)
*/.env
*/.env.*
!*/.env.example

# Logs
*.log
logs/

# Test coverage
coverage/
.phpunit.result.cache

# Build artifacts
*/public/hot
*/public/storage
*/public/build

# Documentation
*.md
!README.md

# Docker files in subdirectories
*/Dockerfile
*/docker-compose*.yml

# Temporary files
*.tmp
*.temp
tmp/
temp/

